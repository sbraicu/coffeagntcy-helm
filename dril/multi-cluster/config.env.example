# Multi-Cluster Configuration Example
# Copy this file and modify the values for your environment

# Cluster Configuration
export FRONTEND_KUBECONFIG="/path/to/frontend/kubeconfig"
export BACKEND_KUBECONFIG="/path/to/backend/kubeconfig"

# Namespace Configuration
export FRONTEND_NAMESPACE="lungo-frontend"
export BACKEND_NAMESPACE="lungo-backend"

# MetalLB Configuration
export METALLB_VERSION="v0.14.8"

# IP Pool Configuration
export FRONTEND_IP_POOL_START="10.100.100.200"
export FRONTEND_IP_POOL_END="10.100.100.220"
export BACKEND_IP_POOL_START="10.100.101.200"
export BACKEND_IP_POOL_END="10.100.101.220"

# Usage:
# 1. Copy this file: cp config.env.example config.env
# 2. Edit config.env with your values
# 3. Source it: source config.env
# 4. Run deployment: ./deploy-openshift-multi-cluster.sh
